@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "UnknownController";
    var currentAction = "UnknownAction";
    if (ViewContext.RouteData != null && ViewContext.RouteData.Values.ContainsKey("action"))
    {
        currentAction = ViewContext.RouteData.Values["action"].ToString();
    }
    else
    {
        currentAction = "UnknownAction";
    }
    var currentPage = Context.Request.Path.Value;
}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="#">25350069</a>
    <div class="navbar-nav">
        <a class="nav-item nav-link @(currentController == "HomeController" && currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Лб 1</a>
        <a class="nav-item nav-link @(currentController == "ProductController" && currentAction == "Index" ? "active" : "")" asp-controller="Product" asp-action="Index">Каталог</a>
        <a class="nav-item nav-link @(currentPage == "/Admin/Index" ? "active" : "")" asp-area="AdminArea" asp-page="/Index">Администрирование</a>
    </div>
</nav>